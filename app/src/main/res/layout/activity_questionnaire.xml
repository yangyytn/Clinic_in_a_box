<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.estelleyyy.clinic_in_a_box.Questionnaire">

    <TextView
        android:id="@+id/questitle"
        android:layout_width="761dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Hello, welcome to the remote clinic!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="  Patient Age: "
                android:textColor="@color/colorPrimaryDark" />


            <EditText
                android:id="@+id/age"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/q1"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:text="1. Does the patient have response to social cues?"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="89dp" />

                <RadioButton
                    android:id="@+id/q1Yes"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:text="Yes"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="155dp" />

                <RadioButton
                    android:id="@+id/q1Mid"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="Weak response, only wakes with prolonged stimulation"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="123dp" />

                <RadioButton
                    android:id="@+id/q1No"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="No response"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="123dp" />

            </RadioGroup>


            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/q2"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:text="2. High-pitched or continuous cry?"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="203dp" />

                <RadioButton
                    android:id="@+id/q2Yes"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:text="Yes"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="238dp" />

                <RadioButton
                    android:id="@+id/q2No"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:text="No"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="270dp" />
            </RadioGroup>


            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/q3"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:text="3. Cold hands/feet?"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="321dp" />

                <RadioButton
                    android:id="@+id/q3Yes"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:text="Yes"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="362dp" />

                <RadioButton
                    android:id="@+id/q3No"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No"
                    tools:layout_editor_absoluteX="38dp"
                    tools:layout_editor_absoluteY="395dp" />
            </RadioGroup>


            <RadioGroup
                android:id="@+id/radioGroup4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/q4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4. Grunting, or sleep apnea (pause in breathing)?" />

                <RadioButton
                    android:id="@+id/q4Yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/q4No"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No" />
            </RadioGroup>


            <RadioGroup
                android:id="@+id/radioGroup5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/q5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5. Skin/Lips/Tongue appearance:" />

                <RadioButton
                    android:id="@+id/q5yes1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mottled/Ashen/Cyanosis" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/wenjijijij"
                    android:adjustViewBounds="true"
                    android:maxWidth="300dp"
                    android:maxHeight="150dp"
                    android:scaleType="fitCenter"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="130dp" />

                <RadioButton
                    android:id="@+id/q5yes2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pale or Flushed" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/flushed"
                    android:adjustViewBounds="true"
                    android:maxWidth="120dp"
                    android:maxHeight="130dp"
                    android:scaleType="fitCenter"
                    tools:layout_editor_absoluteX="5dp"
                    tools:layout_editor_absoluteY="13dp" />

                <RadioButton
                    android:id="@+id/q5No"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No abnormal appearance" />

            </RadioGroup>





            <Button
                android:id="@+id/Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="goToNext"
                android:text="Submit" />
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="712dp"
        android:layout_height="29dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="62dp"
        android:text="   For the following questions, please select the answer that best applies to the patient: "
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
